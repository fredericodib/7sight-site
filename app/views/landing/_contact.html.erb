<section id="section-contact">
    <div class="contact">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h1 class="contact__h1 contact__h1--font"><span class="contact__h1--colorGreen">CONTATO</span></h1>
                </div>
            
                <div class="col-sm-6">
                    <form action="/post" method="post">
                        <input class="form-control contact__input" name="name" placeholder="Nome" /><br />
                        <input class="form-control contact__input" name="phone" placeholder="Telefone" /><br />
                        <input class="form-control contact__input" name="email" placeholder="E-mail" /><br />
                        <textarea class="form-control contact__input textarea" name="text" placeholder="Mensagem"></textarea><br />
                        <div class="contact__submit--position">
                            <input class="btn btn-primary contact__submit" type="submit" value="ENVIAR" /><br /><br />
                        </div>
                    </form>
                </div>
                
                <div class="col-sm-6 contact__info">
                    <h3 class="contact__h3 contact__h3--colorGreen">Endereço</h3>
                    <p class="contact__p">Av. das Castanheiras, s/n - Lote 3700 - Águas Claras, Brasilia - DF, 70297-400</p>
                    <h3  class="contact__h3 contact__h3--colorGreen">Redes Sociais</h3>                  
                    <%= link_to image_tag('facebook1.png', class: "contact__icons contact__icons--tamanho"), "https://www.facebook.com/7sightjr/", :target => '_blank' %>
                    <%= link_to image_tag('linkedin1.png', class: "contact__icons contact__icons--tamanho"),"https://www.linkedin.com/company/7sightjr/", :target => '_blank' %>
                    <%= link_to image_tag('instagram.png', class: "contact__icons contact__icons--tamanho"),"https://www.instagram.com/7sightjr/", :target => '_blank' %>
                </div>
            </div>
        </div>
    </div>
</section>